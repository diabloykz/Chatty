<h1 align="center">Bienvenue sur Chatty , votre application de messagerie instantan√©e</h1>

<h2 class="ui center aligned icon header">
  <i class="circular red power off icon"></i>
  login to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
      <%= form_for :session, html: {class: "ui form", role: "form"}, url: login_path do |f| %>
        <div class="field">
          <%= f.label :username, "Nom d'utilisateur" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Nom d'utilisateur" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Mot de passe" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Mot de passe" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Se connecter", class: "ui red submit button" %>
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui red disabled big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
